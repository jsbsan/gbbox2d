' //  Return true if contact calculations should be performed between these two shapes.
Public Sub ShouldCollide(shape1 As Variant, shape2 As Variant) As Variant ''funcio as variant ''funcion
  
  Dim collide As Variant 
  
  If (shape1.m_groupIndex = shape2.m_groupIndex And shape1.m_groupIndex <> 0)
    Return shape1.m_groupIndex > 0
  Endif
  
  collide = (shape1.m_maskBits And shape2.m_categoryBits) <> 0 And (shape1.m_categoryBits And shape2.m_maskBits) <> 0
  
  Return collide
  
End

