Public userData As Variant = Null
Public shapes As New Variant[]
Public position As Variant = Null
Public rotation As Variant = Null
Public linearVelocity As Variant = Null
Public angularVelocity As Variant = Null
Public linearDamping As Variant = Null
Public angularDamping As Variant = Null
Public allowSleep As Variant = Null
Public isSleeping As Variant = Null
Public preventRotation As Variant = Null

Public Sub new()
  
  Dim i As Integer = 0
  
  ' //  initialize instance variables for references
  Me.shapes = New Variant[]
  ' // 
  Me.userData = Null
  
  For i = 0 To b2Settings.b2_maxShapesPerBody - 1
    Me.shapes[i] = Null
  Next 
  Me.position = New B2Vec2(0.0, 0.0)
  Me.rotation = 0.0
  Me.linearVelocity = New B2Vec2(0.0, 0.0)
  Me.angularVelocity = 0.0
  Me.linearDamping = 0.0
  Me.angularDamping = 0.0
  Me.allowSleep = True
  Me.isSleeping = False
  Me.preventRotation = False
  
End

Public Sub AddShape(shape As Variant)
  
  Dim i As Integer = 0

  For i = 0 To b2Settings.b2_maxShapesPerBody - 1
    If (Me.shapes[i] = Null) Then
      Me.shapes[i] = shape
      Break
    Endif
  Next
  
End
