Public Sub SetZero()
  
  Me.linear1.SetZero()
  Me.angular1 = 0.0
  Me.linear2.SetZero()
  Me.angular2 = 0.0
  
End

Public Sub Set(x1 As Variant, a1 As Variant, x2 As Variant, a2 As Variant)
  
  Me.linear1.SetV(x1)
  Me.angular1 = a1
  Me.linear2.SetV(x2)
  Me.angular2 = a2
  
End

