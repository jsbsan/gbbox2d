Public points: Null
Public normal As New B2Vec2()
Public manifold As Variant = Null
Public body1 As Variant = Null
Public body2 As Variant = Null
Public friction As Variant = Null
Public restitution As Variant = Null
Public pointCount As Integer = 0

Public Sub _new()
  
  Dim i As Integer
  ' //  initialize instance variables for references
  Me.normal = New B2Vec2()
  ' // 
  Me.points = New Array(b2Settings.b2_maxManifoldPoints)
  For (var i = 0 To b2Settings.b2_maxManifoldPoints
    Me.points[i] = New B2ContactConstraintPoint()
  Next
  
End
