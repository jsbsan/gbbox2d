inherits  b2ShapeDef

Public vertices as  variant[]
public vertexCount as integer= 0


public  sub _new()
         dim tmp as b2Vec2()	
	dim i as integer
		' //  The constructor for b2ShapeDef
		 me.type = b2Shape.e_unknownShape
		 me.userData = null
		 me.localPosition = new b2Vec2(0.0, 0.0)
		 me.localRotation = 0.0
		 me.friction = 0.2
		 me.restitution = 0.0
		 me.density = 0.0
		 me.categoryBits = 0x0001
		 me.maskBits = 0xFFFF
		 me.groupIndex = 0
	
		' // 
		' //  initialize instance variables for references
		 me.vertices.clear()
		' // 
		 me.type = b2Shape.e_polyShape
		 me.vertexCount = 0
		for i=0 to  b2Settings.b2_maxPolyVertices 'definir b2Settings como m√≥dulo 
		     tmp= new b2Vec2()
			 me.vertices.add(tmp)
		next
end


